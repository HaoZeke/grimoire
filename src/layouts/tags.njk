{% extends 'default.njk' %}

{% block main %}
{% if metaTitle %}
<h1>{{ title }}</h1>
<h3>{{ subtitle }}</h3>
  <div class="meta">
    {% if publishDate %}Published: <time>{{ publishDate }}</time>{% endif %}    {% if modifiedDate!==publishDate %}Updated: <time>{{ modifiedDate }}</time> {% endif %}
  </div>
{% endif %}

<section>
        <ul class="catList">
          <h3 class="category">{{ tag }}</h3>
    {% for page in pagination.files %}
      <li>
        <a href="{{rootPath}}/{{page.path}}/index.html" title="{{page.title}}">
          <strong>{{page.title}}</strong>
        </a>
          <div class="date">{{ page.blurb }}</div>
      </li>
    {% endfor %}
  </ul>
</section>
{% endblock %}
